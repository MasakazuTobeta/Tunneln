<local:ExpdHorizonStack x:Class="TunnellingMaster.items.expanders.ExpdConLocal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:ts="clr-namespace:WpfControlLibrary"
             xmlns:local="clr-namespace:TunnellingMaster.items.expanders"
             mc:Ignorable="d" x:Name="root"
             d:DesignHeight="450" d:DesignWidth="800">
    <local:ExpdHorizonStack.Header>
        <StackPanel x:Name="header_panel" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock x:Name="title" Text="{Binding Title, ElementName=root}" Margin="5" Height="18" Width="150"/>
            <fa:ImageAwesome x:Name="status_icon" Icon="Unlink" Spin="False"  Margin="5" Height="18"/>
            <ts:ToggleSwitch x:Name="toggle_switch" Margin="5" Height="18"/>
        </StackPanel>
    </local:ExpdHorizonStack.Header>
    <Grid>
            <Label Content="Test"/>
    </Grid>
</local:ExpdHorizonStack>
