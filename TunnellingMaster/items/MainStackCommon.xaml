<StackPanel
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TunnellingMaster"
             xmlns:items="clr-namespace:TunnellingMaster.items"
             xmlns:buttons="clr-namespace:TunnellingMaster.items.buttons"
             x:Class="TunnellingMaster.items.MainStackCommon"
             mc:Ignorable="d" x:Name="root"
             d:DesignHeight="371.89" d:DesignWidth="478.881">
    <Label x:Name="label" Content="{Binding Text, ElementName=root}"/>
    <buttons:BtnAdd x:Name="btn_add" Margin="5" Width="20" Height="20" HorizontalAlignment="Right" Click="btn_add_Click" />
</StackPanel>
