<ScrollViewer
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TunnellingMaster"
             xmlns:items="clr-namespace:TunnellingMaster.items"
             x:Class="TunnellingMaster.items.Connections"
             mc:Ignorable="d" x:Name="root" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
             d:DesignHeight="371.89" d:DesignWidth="478.881">
    <StackPanel x:Name="panel">
        <Label x:Name="label" Content="{Binding Text, ElementName=root}"/>
        <Button x:Name="Add_Button" Content="✚" HorizontalAlignment="Right" FontSize="15" Padding="0,0" Height="20" Width="20" Cursor="Hand" Margin="5" Click="Add_Button_Click"/>
    </StackPanel>
</ScrollViewer>
