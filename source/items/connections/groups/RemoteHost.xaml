<UserControl x:Class="Tunneln.items.connections.groups.RemoteHost"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tunneln.items.connections.groups"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:prop="clr-namespace:Tunneln.Properties"
             xmlns:elements="clr-namespace:Tunneln.items.elements"
             mc:Ignorable="d" 
             d:DesignHeight="86.005" d:DesignWidth="137.637" Margin="0,0,5,0">

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" x:Name="panel">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" x:Name="arrow">
            <fa:ImageAwesome Icon="Exchange" Spin="False" Height="20" VerticalAlignment="Center"/>
            <TextBox x:Name="port" Text="2222" HorizontalAlignment="Center" TextAlignment="Center"
                     Margin="1" VerticalAlignment="Bottom"
                     Background="{x:Null}" BorderBrush="{x:Null}"
                     InputMethod.IsInputMethodEnabled="False" Padding="0,0" 
                     prop:TextBoxAttachment.EnterDownBehavior="UpdateSourceAndSelectAll" Cursor="Arrow"/>
        </StackPanel>
    </StackPanel>
</UserControl>
